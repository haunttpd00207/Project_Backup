                  = t "nav.other_tools.deadlink_checker"
              li
                a[href="#{ENV['CR_TOOL_HOST']}/download_fmt"]
                  = t "nav.other_tools.download_fmt"
              li
                a[href="#{ENV['CR_TOOL_HOST']}/cr_comparer/index"]
                  = t "nav.other_tools.cr_comparer"
              li
                a[href="#{ENV['MOVIE_CUTTER_HOST']}/#{Rails.env.production? ? '/' : 'movie-cutter/'}index"]
                  = t "nav.other_tools.movie_cutter"
              li
                a[href="#{root_path}"]
                  = t "nav.other_tools.order_comparer"
