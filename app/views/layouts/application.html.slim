          li.dropdown[style="display: inline-block"]
            a.dropdown-toggle[href="#" data-toggle="dropdown" style="text-transform: none"]
              = t "nav.gaw"
            ul.dropdown-menu
              li
                a[href="#{ENV['CR_TOOL_HOST']}/gaw/banner/index"]
